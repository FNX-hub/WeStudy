<SplitPane fx:id="root" dividerPositions="0.5" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="logic.control.gui.MeetingMenuGuiControl">
  <items>
    <AnchorPane maxWidth="500.0" minWidth="200.0">
         <children>
            <GridPane vgap="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
              <columnConstraints>
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" percentHeight="90.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <TableView>
                    <columns>
                      <TableColumn fx:id="tbColDate" minWidth="80.0" prefWidth="100.0" text="Date" />
                      <TableColumn fx:id="tbColSubject" minWidth="100.0" prefWidth="120.0" text="Subject" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
                  <Button fx:id="btnNewMeeting" maxWidth="1.7976931348623157E308" minWidth="100.0" mnemonicParsing="false" onAction="#newMeeting" text="New Meeting" GridPane.rowIndex="1">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                     <graphic>
                        <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@baseline_add_circle_outline_black_18dp.png" />
                           </image>
                        </ImageView>
                     </graphic>
                     <GridPane.margin>
                        <Insets left="10.0" right="10.0" />
                     </GridPane.margin>
                  </Button>
               </children>
               <padding>
                  <Insets bottom="10.0" />
               </padding>
            </GridPane>
         </children>
      </AnchorPane>
    <AnchorPane minWidth="350.0">
         <children>
            <VBox layoutX="30.0" layoutY="-40.0" spacing="10.0" style="-fx-background-color: #fff; -fx-background-radius: 5;" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <children>
                  <TilePane hgap="10.0" prefColumns="4" prefRows="2" vgap="10.0">
                     <children>
                        <Label maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="Date:">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                        </Label>
                        <Label fx:id="lblDate" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="dd/mm/yyyy" />
                        <Label maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="Turn:">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                        </Label>
                        <Label fx:id="lblTurn" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="hh:mm" />
                        <Label maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="Message:">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                        </Label>
                     </children>
                  </TilePane>
                  <ScrollPane fitToWidth="true" minHeight="255.0">
                     <content>
                        <TextFlow textAlignment="JUSTIFY">
                           <children>
                              <Text fx:id="txtMessage" strokeType="OUTSIDE" strokeWidth="0.0" text="No Message" />
                           </children>
                           <padding>
                              <Insets bottom="5.0" left="5.0" right="5.0" />
                           </padding>
                        </TextFlow>
                     </content>
                  </ScrollPane>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
            <Button fx:id="btnDeleteMeeting" maxWidth="1.7976931348623157E308" minWidth="100.0" mnemonicParsing="false" onAction="#deleteMeeting" text="Delete Meeting" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <graphic>
                  <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@baseline_delete_black_18dp.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </AnchorPane>
  </items>
</SplitPane>
